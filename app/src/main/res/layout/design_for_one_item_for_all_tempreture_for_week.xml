<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mainColor"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#002B3467">

        <TextView
            android:id="@+id/max_degree_of_one__item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="32°"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/min_degree_of_one__item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/min_degree_of_one__item" />

        <TextView
            android:id="@+id/date_of_one_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Wednesday,15"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_of_one__item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_of_one_item"
            app:layout_constraintStart_toEndOf="@+id/date_of_one_item"
            app:layout_constraintTop_toTopOf="@+id/date_of_one_item"
            app:srcCompat="@drawable/storm" />

        <TextView
            android:id="@+id/min_degree_of_one__item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="12°"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/image_of_one__item"
            app:layout_constraintEnd_toStartOf="@+id/max_degree_of_one__item"
            app:layout_constraintStart_toEndOf="@+id/image_of_one__item"
            app:layout_constraintTop_toTopOf="@+id/image_of_one__item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>